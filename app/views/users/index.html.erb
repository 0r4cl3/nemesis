<h1>Listing users</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user%></td>
        <td><%= user.email %></td>
        <td><button type="button" class="btn btn-warning btn-xs"><%= link_to 'Show', user %></button>
            <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Edit', edit_user_path(user) %></button>
            <button type="button" class="btn btn-danger btn-xs"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-primary"><%= link_to "New User", new_user_path %></button>
